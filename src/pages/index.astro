		<style is:global>

			.color-gradient {
				background: linear-gradient(27deg, rgba(244,239,230,1) 0%, rgba(221,207,186,1) 100%);
			}
		
			@keyframes fadeIn {
				from {
					opacity: 0;
					translate: 0 100px;
				}
				to {
					opacity: 1;
					translate: 0 0;
				}
			}
		
			@keyframes showModal {
					from {
						opacity: 0;
					}
				}
		
			.modal {
				animation: showModal .5s ease-in-out
			}
			
		
			.reveal {
				opacity: 0;
			}
			.fadeIn {
				animation: fadeIn .5s ease-in-out both;
			}
		
			@keyframes charge-title {
				from {
					opacity: 0;
					translate: 0 200px;
					scale: 1.5;
				}
				to {
					opacity: 1;
					translate: 0 0;
					scale: 1;
				}
			}
			@keyframes charge-subtitle {
				from {
					opacity: 0;
					translate: 100px 50px;
				}
				to {
					opacity: 1;
					translate: 0 0;
				}
			}
			@keyframes showingImages {
				from {
					opacity: 0;
					scale: 1.5;
				}
			}
		
			.animateImage  {
				animation: showingImages 3s ease-out;
			}

			/* icons animations */
			.copa1, .copa2, .saco, .vestido, .musica, .tapa, .caja, .music-right, .music-left {
				position: absolute;
				top: 0;
				height: 100%;
				object-fit: contain;
			}
			.copa1 {
				left: 0;
				animation: moveCopa1 1s ease-in-out infinite alternate;
			}
			.copa2 {
				right: 0;
				animation: moveCopa2 1s ease-in-out infinite alternate;
			}
			.brillo-copas {
				position: absolute;
				top: -30px;
				left: 0;
				right: 0;
				margin: 0 auto;
				width: 40px;
				animation: brillo-copas 1s ease-in-out infinite alternate;
			}

			@keyframes moveCopa1 {
				0% {rotate: 0; translate: -10px 3px;}
				30% {rotate: 0; translate: -10px 3px;}
				30% {rotate: -5deg;}
				70% {rotate: 23deg; translate: 0 0;}
				100% {rotate: 23deg;}
			}

			@keyframes moveCopa2 {
				0% {rotate: 0; translate: 10px 3px;}
				30% {rotate: 0; translate: 10px 3px;}
				30% {rotate: 5deg;}
				70% {rotate: -23deg; translate: 0 0;}
				100% {rotate: -23deg;}
			}

			@keyframes brillo-copas {
				0% {opacity: 0;}
				60% {opacity: 0; translate: 0 15px;}
				70% {opacity: 1; translate: 0 0;}
				90% {opacity: 1;}
			}

			.saco {
				left: 0;
				animation: dance 1s ease-in-out infinite alternate;
			}
			.vestido {
				right: 0;
				animation: dance 1s ease-in-out infinite alternate-reverse;
			}

			@keyframes dance {
				0% {rotate: 5deg;translate: 0 2px;}
				20% {rotate: 5deg;translate: 0 0;}
				40% {translate: 0 2px;}
				60% {translate: 0 2px;}
				80% {rotate: -5deg; translate: 0 0;}
				100% {rotate: -5deg; translate: 0 2px;}
			}

			.musica {
				left: 0;
				right: 0;
				margin: 0 auto;
				animation: musica 1.5s ease-in-out infinite alternate;
			}
			.music-right, .music-left {
				width: 12px;
				object-fit: contain;
			}

			.music-right {
				right: -5px;
				top: 15px;
				animation: musica 1s ease-in-out infinite .3s alternate;
			}
			.music-left {
				left: 15px;
				top: -30px;
				animation: musica .7s ease-in-out infinite 1s alternate;
			}

			@keyframes musica {
				0% {rotate: 10deg;}
				50% {rotate: 0;}
				100% {rotate: -10deg;}
			}

			.gift-icon {
				width: 100%;
				height: 100%;
				animation: gift 2s ease-in-out infinite alternate;
			}

			.tapa {
				top: -45px;
				animation: tapa 2s ease-in-out infinite alternate;
			}

			@keyframes gift {
				0% {rotate: 5deg; translate: 5px 0;}
				10% {rotate: -5deg; translate: -5px 0;}
				20% {rotate: 5deg; translate: 5px 0;}
				30% {rotate: -5deg; translate: -5px 0;}
				40% {rotate: 5deg; translate: 5px 0;}
				100% {rotate: 5deg; translate: 5px 0;}
			}

			@keyframes tapa {
				10% {rotate: 0deg; translate: 0 0;}
				50% {rotate: 0deg; translate: 0 0;}
				70% {rotate: 50deg; translate: 40px -30px;}
				100% {rotate: 50deg; translate: 40px -30px;}
