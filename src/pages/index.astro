		<script>
			function observeElementsWithAnimation(targetClass, animationClass) {
			// Verifica si IntersectionObserver es soportado
			if (!('IntersectionObserver' in window)) {
				console.warn('IntersectionObserver no está soportado en este navegador.');
				return;
			}

			// Selecciona todos los elementos con la clase específica
			const elements = document.querySelectorAll(`.${targetClass}`);
			
			// Si no hay elementos, no hace nada
			if (elements.length === 0) {
				console.warn(`No se encontraron elementos con la clase '${targetClass}'.`);
				return;
			}

			// Configuración del IntersectionObserver
			const observerOptions = {
				root: null, // Usa la ventana como viewport
				threshold: 0.2 // El elemento debe ser al menos un 10% visible
			};

			const observer = new IntersectionObserver((entries, observer) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						// Agrega la clase de animación
						entry.target.classList.add(animationClass);

						// Deja de observar el elemento después de activarse la animación
						observer.unobserve(entry.target);
					}
				});
			}, observerOptions);

			// Observa cada elemento
			elements.forEach(element => observer.observe(element));
		}

		observeElementsWithAnimation('reveal', 'fadeIn');
		</script>

		<script>
